<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="1000dp"
              android:layout_height="500dp"
              android:layout_centerInParent="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="1000dp"
                  android:layout_height="400dp"
                  android:layout_gravity="center_vertical">

        <RelativeLayout android:id="@+id/panelAllAct"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="100dp"
                        android:layout_width="400dp"
                        android:gravity="center_vertical"
                >

            <EditText android:id="@+id/filterAllAct"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="Escriba aqui para filtrar..."
                      android:textSize="10dp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="0dp"
                    />

            <ListView android:id="@+id/listActAll"
                      android:layout_height="400dp"
                      android:layout_width="350dp"
                      android:layout_margin="10dp"
                      android:background="@drawable/listview_border"
                      android:scrollbars="vertical"
                      android:layout_marginRight="57dp"
                      android:layout_below="@+id/filterAllAct"
                      android:layout_alignRight="@+id/filterAllAct"></ListView>

        </RelativeLayout>

        <ListView android:id="@+id/listActSeleccionadas"
                  android:layout_height="fill_parent"
                  android:layout_width="400dp"
                  android:layout_centerInParent="true"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginBottom="10dp"
                  android:background="@drawable/listview_border"
                  android:scrollbars="vertical"
                  android:layout_marginTop="52dp"
                ></ListView>

    </LinearLayout>

    <RelativeLayout android:id="@+id/saveButtons"
                    android:layout_height="wrap_content"
                    android:layout_width="856dp"
                    android:layout_marginLeft="-87dp"
                    android:layout_gravity="right|center_vertical">

        <Button android:id="@+id/okActividadesBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/guardar"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/cancelActividadesBtn"
                android:layout_marginRight="60dp"/>

        <Button android:id="@+id/cancelActividadesBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/cancelar"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</LinearLayout>